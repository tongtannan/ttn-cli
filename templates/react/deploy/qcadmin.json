{
  "project_dir_depth": 2,
  "project_name": "template",
  "module_name": "template",
  "install": {
    "commands": []
  },
  "build": {
    "commands": [
      "COUNTRY=${cid} DEPLOY_ENV=${env} yarn run build",
      "mv dist/qcadmin/static/index.html dist/qcadmin/",
      "ls -R dist"
    ],
    "upload_static": {
      "static_dir": "dist",
      "enable_cdn": true
    },
    "docker_image": {
      "base_image": "template",
      "dependent_libraries_files": ["yarn.lock", "package.json", ".npmrc"],
      "run_commands": ["npm install n -g", "n stable", "yarn install", "pip install -U template-deploy-common"],
      "volumes": ["log"]
    }
  },
  "deploy": {
    "idcs": {
      "live": {
        "us": ["us"]
      }
    }
  }
}
